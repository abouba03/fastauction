// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  URL      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  auctions Auction[]
  bids     Bid[]

  @@map("users")
}

model Auction {
  id          String   @id @default(cuid())
  title       String
  description String?
  startPrice  Float
  currentBid  Float    @default(0)
  startTime   DateTime
  endTime     DateTime
  status      String   @default("active") // active, ended, cancelled
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id])

  bids Bid[]

  @@index([userId])
  @@map("auctions")
}

model Bid {
  id        String   @id @default(cuid())
  amount    Float
  createdAt DateTime @default(now())

  auctionId String
  auction   Auction @relation(fields: [auctionId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@index([auctionId])
  @@index([userId])
  @@map("bids")
}